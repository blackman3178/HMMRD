<div class="post">
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>{{drinkReviews.drink_name}}</h2>
      <div>
        Posted by {{drinkReviews.user.username}}
      </div>
    </div>
    <div class="card-body">
    {{#if drinkReviews.image}}
    <img class="reviewCardImage" src="{{drinkReviews.image}}" alt="Image of {{drinkReviews.drink_name}}">
    {{else}}
    <img class="reviewCardImage" src="../public/images/hmmrdlight.png" alt="Image of {{drinkReviews.drink_name}}">
    {{/if}}
    <br>
      {{drinkReviews.review}}
    </div>
  </article>

  {{#if drinkReviews.comments}}
    <section class="card">
      <div class="card-header">
        <h3>Comments</h3>
      </div>

      <div class="card-body">
        {{#each drinkReviews.comments}}
          <div>
            <p>
              {{comment}}
            </p>
            <p>
              &mdash; {{user.username}}
            </p>
          </div>
        {{/each}}
      </div>
    </section>
  {{/if}}

  <form id="new-comment-form" class="card">
    <div class="card-header">
      <h3>Add New Comment</h3>
    </div>

    <div class="card-body">
      <input class="inputDrinkId" type="hidden" name="post-id" value= {{drinkReviews.id}} />

      <label class="form-label" for="comment-body">Comment</label>

      <textarea name="comment-body" class="form-input"></textarea>

      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>

<script src="/js/comment.js"></script>